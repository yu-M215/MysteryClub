<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= link_to user_relationships_path(user.id), remote: true, method: :delete do %>
       フォロー解除 <i class="fas fa-user-minus"></i>
    <% end %>
  <% else %>
    <%= link_to user_relationships_path(user.id), remote: true, method: :post do %>
      フォロー <i class="fas fa-user-plus"></i>
    <% end %>
  <% end %>
<% end %>