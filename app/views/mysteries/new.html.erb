<h2>謎解き投稿フォーム</h2>

<%= form_with model: @mystery, local:true, do |f| %>
  <label>タイトル</label>
  <%= f.text_field :title %>
  <label>問題画像</label>
  <%= f.attachment_field :image %>
  <label>問題文</label>
  <%= f.text_area :discription %>
  <label>答え</label>
  <%= f.text_field :answer %>
  <label>解説</label>
  <%= f.text_area :answer_discription %>
  <label>解説用画像</label>
  <%= f.attachment_field :answer_image %>
  <label>難易度</label>
  <%= f.submit "投稿！！" %>
<% end %>

<script>
  $('#difficulty_level').raty({
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'mystery[difficulty_level]' //登録するモデル名とカラム名を記述
  });
</script>