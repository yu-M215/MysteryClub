<% if @user == current_user %>
  <div class="row">
    <h4 class="header col-2 offset-5">マイページ</h4>
    <a class="mr-3" data-toggle="collapse" href="#confcollapse" role="button" aria-expanded="false" aria-controls="confcollapse">
      <i class="fas fa-cogs"></i>
    </a>
    <div class="overflow-hidden">
      <div class="collapse" id="confcollapse">
        <%= link_to "プロフィール編集", edit_user_path(@user), class:"mr-2" %>
        <%= link_to "退会", confirm_unsubscribe_path %>
      </div>
    </div>
  </div>
<% else %>
  <h4 class="header text-center"><%= @user.name %> さんのプロフィール</h4>
  <div class="row">
    <%= render 'relationships/follow_btn', user: @user %>
    <% if current_user.following?(@user) && @user.following?(current_user) %>
      <%= link_to "DM", chat_path(@user.id), class:"ml-3" %>
    <% end %>
  </div>
<% end %>

<%= render 'users/profile', user: @user %>
<%= render 'mysteries/index', mysteries: @mysteries %>

