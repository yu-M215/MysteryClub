<div class="row mb-2">
  <% if @user.id == current_user.id %>
    <h2 class="col-2">マイページ</h2>
    <ul>
      <li><%= link_to "プロフィール編集", edit_user_path(@user), class:"btn btn-primary offset-6 mt-2" %></li>
      <li><%= link_to "退会", confirm_unsubscribe_path, class:"btn btn-danger" %></li>
    </ul>
  <% else %>
    <h2 class="col-6"><%= @user.name %> さんのプロフィール</h2>
    <div class="col-6">
      <span class="offset-4">
        <%= render 'relationships/follow_button', user: @user %>
      </span>
      <% if current_user.following?(@user) && @user.following?(current_user) %>
        <%= link_to 'chatを始める', chat_path(@user.id), class: "ml-3" %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="row mb-4">
  <div class="offset-1 col-2 pl-1" id="profile-image-box">
    <%= attachment_image_tag @user, :profile_image, size:"180x180", alt:"ProfileImage", fallback:"profile_img.jpg" %>
  </div>
  <div class="col-6">
    <span>会員No.<%= @user.id %>：<%= @user.name %></span>
    <% if @user.is_birthday_opened %>
      <span>誕生日：<%= @user.birthday %></span>
    <% else %>
      <span>誕生日：非公開</span>
    <% end %>
    <div id="profile-box">
      <%= @user.introduction %>
    </div>
  </div>
  <div class="col-2 list-group" id="user-menu">
    <%= link_to "投稿一覧", user_path(@user), class:"list-group-item list-group-item-action active" %>
    <%= link_to "いいねした投稿", user_path(@user), class:"list-group-item list-group-item-action" %>
    <%= link_to "フォロー", user_path(@user), class:"list-group-item list-group-item-action" %>
    <%= link_to "フォロワー", user_path(@user), class:"list-group-item list-group-item-action" %>
  </div>
