<div class="row">
  <% users.each do |user| %>
    <div class="col-3 px-3">
      <div class="card mb-3">
        <%= link_to user_path(user.id) do %>
          <%= attachment_image_tag(user, :profile_image, :fill, 200, 200, alt:"Profileimage", size:"200x200", fallback: "profile_image.jpg", class:"card-img-top") %>
        <% end %>
        <div class="card-body text-center">
          <% if user.is_actived %>
            <h5 class="card-title">
              <%= link_to user_path(user.id) do %>
                <%= user.name %>
              <% end %>
            </h5>
          <% else %>
            <h5 class="card-title disabled">
              <%= user.name %>(退会済み)
            </h5>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= paginate users %>
