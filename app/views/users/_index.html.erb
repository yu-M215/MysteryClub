<div class="card-deck">
  <% users.each do |user| %>
    <div class="card col-3 px-0">
      <%= link_to user_path(user.id) do %>
        <%= attachment_image_tag user, :profile_image, alt:"Profileimage", size:"280x180", fallback: "profile_image.jpg", class:"card-img-top" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title text-center">
          <%= link_to user_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </h5>
        <% unless user.is_actived %>
          <p class="text-center">削除済みユーザー</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>