<h2 class="mb-4">新規登録</h2>

<%= form_with model: @user, url: user_registration_path, id:"new_user", class:"new_user", local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row mb-4">
    <label class= "col-3">ニックネーム</label>
    <%= f.text_field :name, autofocus: true, placeholder: "ニックネーム", class:"form-control col-2" %>
  </div>

  <div class="form-group row mb-4">
    <label class= "col-3">メールアドレス</label>
    <%= f.email_field :email, autocomplete: "email", placeholder: "xxx@gmail.com", class:"form-control col-3" %>
  </div>

  <div class="form-group row mb-4">
    <label class= "col-3">電話番号（ハイフンなし）</label>
    <%= f.text_field :tellphone_number, placeholder: "00000000", class:"form-control col-3" %>
  </div>

  <div class="form-group row mb-4">
    <label class= "col-3">生年月日</label>
    <%= f.date_select :birthday, class:"form-control" %>
  </div>

  <div class="form-group row mb-4">
    <label class= "col-3">パスワード（6文字以上）</label>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード", class:"form-control col-3" %>
  </div>

  <div class="form-group row mb-4">
    <label class= "col-3">パスワード（確認用）</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"パスワード確認", class:"form-control col-3" %>
  </div>

  <div class="actions col-4 offset-4 mt-3">
    <%= f.submit "登録", class:"btn btn-dark" %>
  </div>
<% end %>

　<div class="row mt-4">
  <h5 style="color:red;">※既に登録済みの方※</h5>
  <p class="offset-1"><a href="/users/sign_in">こちら</a>からログインしてください</p>
</div>

