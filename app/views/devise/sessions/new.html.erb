<h2 class="mb-5">ログイン</h2>
<div class="offset-1">
  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <div class="form-group row">
      <label class="col-2">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class:"form-control col-3" %>
    </div>

    <div class="form-group row">
      <label class="col-2">パスワード</label>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class:"form-control col-3" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-5">
        <%= f.check_box :remember_me %>
        <label>ログイン状態を保持する</label>
      </div>
    <% end %>

    <div class="actions offset-3">
      <%= f.submit "ログイン", class:"btn btn-outline-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>